    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Edit</h1>

<h3>User Roles</h3>
<div class="form-group">
    <label class="control-label"></label>
    <select  class="form-control" />
    @{
        @foreach (var role in Model)
        {
            <option value="@role.Id">@role.Name</option>

        }

    }
    </select>
    <span  class="text-danger"></span>
</div>






