@model ProjetoPv.Models.Treino

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Treino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            @if (ViewBag.EquipasId != null)
            {
            <div class="form-group">
                    <label asp-for="Equipa.Nome" class="control-label"></label>
                    <select asp-for="EquipasId" class="form-control" asp-items="ViewBag.EquipasId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Equipa.Nome" class="control-label"></label>
                    <input asp-for="Equipa.Nome" class="form-control" value="@ViewBag.Equipa.Nome" readonly />
                    <span asp-validation-for="Equipa.Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
                <div class="form-group" style="visibility:collapse" >
                    <label asp-for="EquipasId" class="control-label"></label>
                    <input asp-for="EquipasId" class="form-control" value="@ViewBag.Equipa.Id" readonly />
                    <span asp-validation-for="EquipasId" class="text-danger"></span>
                </div>
            }

            
        </form>
    </div>
</div>



